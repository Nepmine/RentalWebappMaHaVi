// Setup ----------------------
generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Tables -------------------------
model Property {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  price       Int
  coordinates Json
  images      Json[]

  owner   Owner @relation(fields: [ownerId], references: [id])
  ownerId Int
}

model Owner {
  id   Int    @id @default(autoincrement())
  name String

  property Property[]
}
